<h1>Searching for - <%= @search_term %></h1>

<table border="1">
  <tr>
     <th>Image</th>
     <th>Name</th>
     <th>Description</th>
  </tr>
  <% @courses.each do |course| %>
    <%# **cycle** will run through the elements and %>
    <%# select one and skip the other %>
    <%# adding the css rule %>
    <tr class=<%= cycle('even', 'odd') %> >
      <td><%= image_tag(course["smallIcon"]) %></td>
      <td><%= course["name"] %></td>
      <td><%= course["shortDescription"] %></td>
    </tr>
  <% end %>
</table>
